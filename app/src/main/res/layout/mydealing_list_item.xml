<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cont_Ditem_root"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/background_state_drawable"
    android:clickable="true"
    >

    <ImageView
    android:id="@+id/im_Ditem_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    />

    <TextView
        android:id="@+id/lbl_Ditem_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="책 제목:"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/lbl_Ditem_writer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Ditem_book"
        android:layout_marginLeft="140dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="저자 이름:"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/lbl_Ditem_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Ditem_writer"
        android:layout_marginLeft="140dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="출판사:"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/lbl_Ditem_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Ditem_company"
        android:layout_marginLeft="140dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="출판사:"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>


</RelativeLayout>

