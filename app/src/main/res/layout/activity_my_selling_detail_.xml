<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_selling_detail_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.frenzy.ebook.dgbook2.MyAccount.MyDealingDetail_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:layout_weight="0.45"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/selling_scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal">

            <ImageView android:id="@+id/imageDownloaded"
                app:srcCompat="@drawable/border"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="295dp"
                android:layout_height="289dp" />
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal">

                <TextView
                    android:text="책 이름 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_text_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/lbl_Sitem_title"
                    android:textSize="25dp"
                    android:gravity="left" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="출판사 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_text_company" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="25dp"
                    android:id="@+id/lbl_Sitem_company" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="저자 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_text_writer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="25dp"
                    android:id="@+id/lbl_Sitem_writer" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="교수님 성함 :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_text_prof" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="25dp"
                    android:id="@+id/lbl_Sitem_prof" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="강좌명 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_text_class" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="25dp"
                    android:id="@+id/lbl_Sitem_class_" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="가격 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_text_price" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="25dp"
                    android:id="@+id/lbl_Sitem_price" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="판매/대여 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_text_type" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="25dp"
                    android:id="@+id/lbl_Sitem_type" />


            </TableRow>

        </TableLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/selling_scroll">

        <Button
            android:id="@+id/button_selled"
            android:text="판매완료"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_lend_start"
            android:text="대여시작"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_selled"
            android:layout_alignBottom="@+id/button_selled"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button_lend_finish"
            android:text="대여만료"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button_lend_start"
            android:layout_toEndOf="@+id/button_lend_start" />

    </LinearLayout>
    <Button
        android:id="@+id/button_writeComment"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/selling_scroll"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="95dp"
        android:background="#00ff0000"
        android:text="댓글쓰러가기"
        android:textSize="20dp"/>


</RelativeLayout>



