<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cont_Ritem_root"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/background_state_drawable"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/im_Ritem_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/lbl_Ritem_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/im_Ritem_icon"
        android:layout_marginLeft="140dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/lbl_Ritem_writer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Ritem_book"
        android:layout_marginLeft="140dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/lbl_Ritem_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Ritem_writer"
        android:layout_marginLeft="140dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/lbl_Ritem_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Ritem_company"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="140dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>

</RelativeLayout>